<h1> Check out these groovy ratings </h1>

<% @movies.each do |m| %>
  <h2><%= m.name %> - <%= m.description %></h2>
  <% m.reviews.each do |r| %>
    <h4><%= r.title %> - <%= r.stars %></h4>
    <p><%= r.content %></p>
  <% end %>
  <%= link_to "Review this movie", new_movie_review_path(m)%>
<% end %>
