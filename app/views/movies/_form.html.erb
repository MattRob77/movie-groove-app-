<h1> You are grooving! </h1>
<%= render partial: 'errors', locals:{objects: @movie}%>

<%= form_for(@movie) do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <p> Select a Genre that already exists: </p>
  <div>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "Pick one" %>

  </div>

  <p> Or create a new Genre: </p>
  <div>
    <%= f.fields_for :genre do |g| %>
      <%= g.label :name %>
      <%= g.text_field :name %>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>
